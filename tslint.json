{
    "extends": [
        "tslint:latest"
    ],
    "jsRules": {
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            false
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    },
    "rules": {
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "no-eval": true,
        "no-internal-module": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "no-unused-expression": false,
        "no-var-keyword": true,
        "no-string-literal": false,
        "no-string-throw": true,
        "member-ordering": [
            false
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [
            true,
            "double"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "eofline": true,
        "prefer-const": true,
        "switch-default": true,
        "no-console": [
            false
        ],
        "no-empty-interface": false,
        "max-line-length": [
            false
        ],
        "object-literal-sort-keys": false,
        "ordered-imports": [
            true
        ],
        "prefer-for-of": false,
        "no-var-requires": true,
        "typedef": [
            true
        ],
        "max-file-line-count": [
            true,
            500
        ],
        "align": [
            true
        ],
        "newline-before-return": true,
        "object-literal-shorthand": true,
        "prefer-method-signature": true,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "only-arrow-functions": [
            false
        ],
        "triple-equals": [
            false
        ],
        "no-empty": false,
        "interface-name": [
            false
        ],
        "no-namespace": [
            false
        ],
        "ban-types": [
            true,
            [ "Object", "use object instead" ],
            [ "String", "use string instead" ]
        ],
        "prefer-object-spread": true,
        "arrow-parens": false,
        "one-variable-per-declaration": [
            false
        ],
        "no-this-assignment": false,
        "no-shadowed-variable": false
    }
}
